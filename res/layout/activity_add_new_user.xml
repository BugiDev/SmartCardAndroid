<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    android:gravity="center"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AddNewUserActivity" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/new_user_create" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <EditText
                android:id="@+id/new_user_lastname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/new_user_firstname"
                android:layout_below="@+id/new_user_firstname"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:hint="@string/new_user_lastname"
                android:inputType="textPersonName"
                android:textColor="@color/red"
                android:textColorHighlight="@color/red"
                android:textColorHint="@color/red">

            </EditText>

            <EditText
                android:id="@+id/new_user_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/new_user_lastname"
                android:layout_below="@+id/new_user_lastname"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:hint="@string/new_user_username"
                android:inputType="textPersonName"
                android:textColor="@color/red"
                android:textColorHighlight="@color/red"
                android:textColorHint="@color/red" />

            <EditText
                android:id="@+id/new_user_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/new_user_username"
                android:layout_below="@+id/new_user_username"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:hint="@string/new_user_password"
                android:inputType="textPassword"
                android:textColor="@color/red"
                android:textColorHighlight="@color/red"
                android:textColorHint="@color/red" />

            <EditText
                android:id="@+id/new_user_repeat_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/new_user_password"
                android:layout_below="@+id/new_user_password"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:hint="@string/new_user_again_password"
                android:inputType="textPassword"
                android:textColor="@color/red"
                android:textColorHighlight="@color/red"
                android:textColorHint="@color/red" />

            <EditText
                android:id="@+id/new_user_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/new_user_repeat_password"
                android:layout_below="@+id/new_user_repeat_password"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:hint="@string/new_user_email"
                android:inputType="textEmailAddress"
                android:textColor="@color/red"
                android:textColorHighlight="@color/red"
                android:textColorHint="@color/red" />

            <EditText
                android:id="@+id/new_user_firstname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:ems="10"
                android:hint="@string/new_user_firstname"
                android:inputType="textPersonName"
                android:textColor="@color/red"
                android:textColorHighlight="@color/red"
                android:textColorHint="@color/red" />

            <TextView
                android:id="@+id/new_user_birthady_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/new_user_email"
                android:layout_below="@+id/new_user_email"
                android:layout_marginTop="26dp"
                android:text="@string/new_user_birthday"
                android:textColor="@color/red"
                android:textColorHighlight="@color/red"
                android:textColorHint="@color/red" />

            <DatePicker
                android:id="@+id/new_user_birthday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/new_user_email"
                android:layout_below="@+id/new_user_birthady_text"
                android:calendarViewShown="false"
                android:textColor="@color/red"
                android:textColorHighlight="@color/red"
                android:textColorHint="@color/red" 
                android:layout_marginTop="-15px"/>
            
        </RelativeLayout>
    </ScrollView>

    <Button
        android:id="@+id/new_user_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/new_user_btn"
        android:textColor="@color/white" />

</RelativeLayout>